<project name="ConmanDictionary" default="default">
    <description>
    	A small dictionary application for constructed languages
    </description>
	
	<property name="src" 	location="src"  />
	<property name="build"	location="bin"  />
	<property name="dist"	location="dist" />

    <target name="default" depends="build" />

    <target name="build">
    	<javac srcdir="${src}" destdir="${build}"/>
    </target>
	<target name="clean">
		<delete dir="${build}/org"/>
	</target>
</project>

