<UserControl x:Class="ConmanDictionary.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConmanDictionary"
             mc:Ignorable="d" Width="370" Height="45" MinHeight="45" MaxHeight="45">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="search" Margin="10" TextWrapping="Wrap" Grid.Row="0" Grid.Column="0"/>
        <Button x:Name="clear" Content="Clear" Margin="10" Width="70" Grid.Row="0" Grid.Column="1"/>
    </Grid>
</UserControl>
