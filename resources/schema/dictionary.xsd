    <xs:element name="notepad" type="xs:string"/>
	<xs:element name="entry">
    	<xs:complexType>
			<xs:annotation>
				<xs:appinfo>
					<jaxb:class name="Entry"/>
				</xs:appinfo>
			</xs:annotation>
    		<xs:sequence>
	   			<xs:element name="term" type="xs:string"/>
   				<xs:element name="definition" type="xs:string"/>
   			</xs:sequence>
    	</xs:complexType>
	</xs:element>
    <xs:element name="definitions">
	    <xs:complexType>
			<xs:annotation>
				<xs:appinfo>
					<jaxb:class name="EntryList"/>
				</xs:appinfo>
			</xs:annotation>
	    	<xs:sequence>
	    		<xs:element
	    			ref="entry"
	    			minOccurs="0"
	    			maxOccurs="unbounded" />
	    	</xs:sequence>
	    	<xs:attribute name="language" type="xs:string" />
	    </xs:complexType>
    </xs:element>    
    <xs:element name="dictionarydatabase">
    	<xs:complexType>
			<xs:annotation>
				<xs:appinfo>
					<jaxb:class name="Document"/>
				</xs:appinfo>
			</xs:annotation>
   			<xs:sequence>
	   			<xs:element ref="notepad" minOccurs="0" maxOccurs="1"></xs:element>
   				<xs:element ref="definitions" minOccurs="2" maxOccurs="2"></xs:element>
	   		</xs:sequence>
	    </xs:complexType>	
    </xs:element>
</xs:schema>